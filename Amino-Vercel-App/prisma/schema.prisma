generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model BioBank {
  id           String         @id @default(auto()) @map("_id") @db.ObjectId
  name         String
  location     String
  address      String
  nft          Nft?
  shippingInfo ShippingInfo[]
}

model Nft {
  id              String        @id @default(auto()) @map("_id") @db.ObjectId
  halotypeHash    String?
  contractAddress String
  biobank         BioBank?      @relation(fields: [biobankId], references: [id])
  shippingInfo    ShippingInfo? @relation(fields: [shippingId], references: [id])
  donor           Donor?        @relation(fields: [donorId], references: [id])
  donorId         String?       @unique @db.ObjectId
  shippingId      String?       @unique @db.ObjectId
  biobankId       String?       @unique @db.ObjectId
}

model Donor {
  id            String  @id @default(auto()) @map("_id") @db.ObjectId
  email         String?
  walletAddress String?
  username      String?
  nft           Nft?
}

model ShippingInfo {
  id           String   @id @default(auto()) @map("_id") @db.ObjectId
  street       String
  apartmentNum String
  state        String
  zipcode      String
  arrived      Boolean  @default(false)
  nft          Nft?
  biobank      BioBank? @relation(fields: [biobankId], references: [id])
  biobankId    String?
}
